<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lay_bor"
    android:id="@+id/menu_l">

    <ImageView
        android:id="@+id/ic_menu"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/menu512"
        android:padding="14dp" />

    <ImageView
        android:id="@+id/ic_pic"
        android:layout_below="@id/ic_menu"
        android:layout_width="@dimen/ic_w"
        android:layout_height="@dimen/ic_h"
        android:src="@drawable/pic512"
        android:layout_marginTop="@dimen/ic_mtop"
        android:padding="@dimen/ic_padi"/>

    <ImageView
        android:id="@+id/ic_play"
        android:layout_below="@id/ic_pic"
        android:layout_width="@dimen/ic_w"
        android:layout_height="@dimen/ic_h"
        android:src="@drawable/play512"
        android:layout_marginTop="@dimen/ic_mtop"
        android:padding="@dimen/ic_padi"/>

    <ImageView
        android:id="@+id/ic_doc"
        android:layout_below="@id/ic_play"
        android:layout_width="@dimen/ic_w"
        android:layout_height="@dimen/ic_h"
        android:src="@drawable/doc512"
        android:layout_marginTop="@dimen/ic_mtop"
        android:padding="@dimen/ic_padi"/>

    <ImageView
        android:id="@+id/ic_note"
        android:layout_below="@id/ic_doc"
        android:layout_width="@dimen/ic_w"
        android:layout_height="@dimen/ic_h"
        android:src="@drawable/note512"
        android:layout_marginTop="@dimen/ic_mtop"
        android:padding="@dimen/ic_padi"/>

    <ImageView
        android:id="@+id/ic_pdf"
        android:layout_below="@id/ic_note"
        android:layout_width="@dimen/ic_w"
        android:layout_height="@dimen/ic_h"
        android:src="@drawable/pdf512"
        android:layout_marginTop="@dimen/ic_mtop"
        android:padding="@dimen/ic_padi" />

    <ImageView
        android:id="@+id/ic_logout"
        android:layout_below="@+id/ic_pdf"
        android:layout_width="@dimen/ic_w"
        android:layout_height="@dimen/ic_h"
        android:src="@drawable/logout512"
        android:layout_marginTop="170dp"
        android:padding="15dp" />

</RelativeLayout>